<div>
    <section class="blog-posts">
        <div class="post">
            <div class="post-head">
                <span class="title">{{singlePost.post_title}}</span>
                <span class="post-info">Posted: {{singlePost.date_created}}</span>
                <span id="grabUid" class="post-info">Global post {{singlePost.id}} -by {{postBy}}</span>
            </div>
            <div>
                <p class="post-body">
                    {{singlePost.post_body}}
                </p>
            </div>
        </div>
    </section>

    <section class="new-comment">
        <div>
            <div class="new-body">
                <label class="new-post-top" for="commentBody">Comment:</label>
                <textarea id="commentBody" maxlength="250"></textarea>
            </div>
            <button id="new-comment-btn">When you're ready, click here to comment!</button>
        </div>
    </section>

    {{#each postComments as |comm|}}
    <section class="blog-posts">
        <div class="post">
            <div class="post-head">
                <span class="title"> comment by: {{comm.user.username}}</span>
                <span class="post-info">Posted: {{comm.date_created}}</span>
                <span class="post-info">Comment #{{comm.id}}</span>

            </div>
            <div>
                <p class="post-body">
                    {{comm.comment_body}}
                </p>
            </div>
        </div>
    </section>
    {{/each}}
    
</div>
<script src="/js/postNewComment.js"></script>