<div>
    <h2 class="greeting">{{username}}, contruct your new post!</h2>

    <section class="new-post">
        <div>
            <div class="new-title">
                <label class="new-post-top" for="postTitle">Title:</label>
                <input type="text" id="postTitle">
            </div>
            <div class="new-body">
                <label for="postBody">Post body:</label>
                <textarea id="postBody"></textarea>
            </div>
            <button id="new-post-btn">When you're ready, click here to submit!</button>
        </div>
    </section>
</div>